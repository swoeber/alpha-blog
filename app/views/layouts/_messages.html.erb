<% if flash.any? %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <% flash.each do |k, message| %>
      <%= message %>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>