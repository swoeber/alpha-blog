<div class="container">
  <h1>List of Articles</h1>
  <%= link_to "New Article", new_article_path, class: "btn btn-success mb-2" %>
  <div class="list-group">
  <% @articles.each do | item | %>
      <%= link_to item.title, article_path(item), class: "list-group-item list-group-item-action" %>
  <% end %>
  </div>
</div>